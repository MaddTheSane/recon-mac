OTHER_CFLAGS = -fconstant-cfstrings

ARCHS = $(ARCHS_STANDARD)

SDKROOT = macosx
MACOSX_DEPLOYMENT_TARGET = 10.7

// Statics are thread safe
GCC_THREADSAFE_STATICS = YES

// Make strings read only
GCC_REUSE_STRINGS = YES

GCC_PRECOMPILE_PREFIX_HEADER = YES

COPY_PHASE_STRIP = NO
STRIP_INSTALLED_PRODUCT = NO
STRIP_STYLE = debugging

// enable objc exceptions
GCC_ENABLE_OBJC_EXCEPTIONS = YES

// not sure if I need this
GCC_ENABLE_CPP_EXCEPTIONS = YES
GCC_ENABLE_CPP_RTTI = YES

// Generate position dependent code, the app sets this to YES for release builds
GCC_DYNAMIC_NO_PIC = NO
	
// add -Wextra for more warnings
WARNING_CFLAGS = -Wmost

OTHER_LDFLAGS = -headerpad_max_install_names

// allows for (int i=0;i<100;i++)
GCC_C_LANGUAGE_STANDARD = c99

GCC_GENERATE_DEBUGGING_SYMBOLS = YES
DEBUG_INFORMATION_FORMAT = dwarf

GCC_WARN_ABOUT_RETURN_TYPE = YES
GCC_WARN_UNUSED_VALUE = YES
GCC_WARN_UNUSED_VARIABLE = YES
//GCC_WARN_UNUSED_PARAMETER = YES
GCC_WARN_CHECK_SWITCH_STATEMENTS = YES
GCC_WARN_TYPECHECK_CALLS_TO_PRINTF = YES
GCC_WARN_UNUSED_FUNCTION = YES

// no good
// GCC_WARN_MISSING_PARENTHESES = YES
// GCC_TREAT_NONCONFORMANT_CODE_ERRORS_AS_WARNINGS = YES

//GCC_VERSION = com.apple.compilers.llvmgcc42

ALWAYS_SEARCH_USER_PATHS = NO
CLANG_ENABLE_MODULES = YES
